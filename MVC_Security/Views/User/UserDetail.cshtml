@model List<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "UserDetail";
}
<h2> Detail van de user<i> @ViewBag.usernaam </i></h2>
<h3> Roles :</h3>
@if (Model.Count != 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Rolename</th>
                <th>Delete role for user</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td> @role.Id </td>
                    <td> @role.Name </td>
                    <td align="center"> <a href='@Url.Action("VerwijderRoleForMember", new { userid = ViewBag.userid, roleid = role.Id })'> <img src="~/Images/delete.png" alt="verwijderen" /> </a> </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{ 
    <p>User @ViewBag.usernaam behoort tot geen enkele rol.</p>
} 
@Html.ActionLink("Terug naar userbeheer", "Userbeheer", null, new { @class = "btn btn-default" })